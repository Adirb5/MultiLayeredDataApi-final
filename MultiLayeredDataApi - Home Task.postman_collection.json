						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\"id\": 1, \"value\": \"Hello World from Postman\"}"
				},
				"url": {
					"raw": "{{baseUrl}}/data",
					"host": [
						"{{baseUrl}}"
					],
