{
	"info": {
		"_postman_id": "13aa8e82-9cd2-4be3-9fd9-3d9943244b0e",
		"name": "MultiLayeredDataApi - Home Task",
		"description": "Postman collection for JWT auth and data endpoints.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth - Login (Admin)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"let data = pm.response.json();",
							"if (data && data.token) {",
							"  pm.collectionVariables.set('token', data.token);",
							"  console.log('Token saved to collection variables.');",
							"} else {",
							"  pm.test('Token not returned', function(){ pm.expect(false).to.be.true; });",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\"username\": \"admin\", \"password\": \"1234\"}"
				},
				"url": {
					"raw": "{{baseUrl}}/auth/login",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"auth",
						"login"
					]
				}
			},
			"response": []
		},
		{
			"name": "Data - Get by Id",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/data/1",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"data",
						"1"
					]
				}
			},
			"response": []
		},
		{
